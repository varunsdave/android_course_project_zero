<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="com.varunsdave.projectzero.MainActivity"
    android:background="@color/varunFave"
    >

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
       />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:id="@+id/btn_popular_movies"
        android:text="Popular Movies"
        android:background="@color/darkBlue"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="showToast"
       />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_popular_movies"
        android:id="@+id/btn_stock_hawk"
        android:text="Stock Hawk"
        android:background="@color/darkBlue"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="showToast"
      />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_stock_hawk"
        android:id="@+id/btn_build_it_bigger"
        android:text="Build It Bigger"
        android:background="@color/darkBlue"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="showToast"
    />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_build_it_bigger"
        android:id="@+id/btn_make_material"
        android:text="Make your app Material"
        android:background="@color/darkBlue"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="showToast"
      />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_make_material"
        android:id="@+id/btn_ubiquitous"
        android:text="Go Ubiquitous"
        android:background="@color/darkBlue"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="showToast"
       />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ubiquitous"
        android:id="@+id/btn_capstone"
        android:text="Capstone"
        android:background="@color/darkBlue"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:onClick="showToast"
      />



</RelativeLayout>
